params {
  config_profile_description = 'Institut Pasteur Maestro cluster profile'
  config_profile_contact = 'Pierre Luisi (@pierrespc)'
}

singularity {
  enabled = true
  autoMounts = true
  runOptions =  '--home $HOME:/home/$USER --bind /pasteur'
}

process {
  executor = 'slurm'
  scratch=false
  queue = "common"
  clusterOptions = "--qos=long"
  
}

params {
  igenomes_ignore = true
  igenomesIgnore = true
  max_memory = 100.GB
  max_cpus = 5
  max_time = 8760.h
}
