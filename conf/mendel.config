/*
 * --------------------------------------------------------------------------------------
 *  Nextflow config file for the MENDEL cluster at the Gregor Mendel Institute in Vienna
 * -------------------------------------------------------------------------------------
 */

singularity {
  enabled = true
}

process {
  beforeScript = 'module load Singularity'
  executor = 'pbs'
  clusterOptions = { "-P $params.project" }
}

params {
  max_time = 192.h
  igenomesIgnore = true
}
